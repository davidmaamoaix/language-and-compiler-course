decl length, Counter;

main() {
    

    length =   input("Enter length: ");

    pyramid(length);
}

pyramid(length) {
    decl out_str;
     Counter  =  1;
    out_str  =   "*";

    while (Counter  <=   length) {
            print(out_str + "\n");
          out_str = out_str    + "*";
         Counter = Counter + 1;
    }

         return;
}