decl length, Counter;

main() {
    

    length =   str_to_int(input("Enter length: "));

    pyramid(length);
}

pyramid(length) {
    decl out_str;
     Counter  =  1;
    out_str  =   "*";

    while (Counter  <=   length) {
            print(out_str);
          out_str = out_str    + "*";
         Counter = Counter + 1;
    }

         return;
}